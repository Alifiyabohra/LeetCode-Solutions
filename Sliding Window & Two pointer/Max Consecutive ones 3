class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int i=0,j=0,zeroes=0,maxlen=0;
        int n=nums.size();
        while(j<n){
            if(nums[j]==0){
                zeroes++;
            }
            
            while(zeroes > k){
                if(nums[i]==0){
                    zeroes--;
                }
                i++;
            }
            maxlen=max(maxlen,j-i+1);
            j++;
             
        }
        return maxlen;
    }
};
