 int totalFruit(vector<int>& fruits) {
        unordered_map<int,int>mpp;
        int i=0,j=0,maxlen=0;
        int n=fruits.size();
        while(j<n){
            mpp[fruits[j]]++;

            while(mpp.size()>2){
                mpp[fruits[i]]--;
                if(mpp[fruits[i]]==0){
                    mpp.erase(fruits[i]);
                }
                i++;
            }
            
            maxlen=max(maxlen,j-i+1);
            j++;
        }
        return maxlen;
    }

T.C --> O(N+N)
S.C --> O(3)
